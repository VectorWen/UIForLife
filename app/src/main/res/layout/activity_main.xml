<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f00"
        android:text="这里是写说明的" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PinnedHeaderListView 固定头ListView"
        android:id="@+id/pinned_header_btn" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network 网络使用"
        android:id="@+id/network_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera 摄像头使用"
        android:id="@+id/camera_btn" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ShowImages 图片显示"
        android:id="@+id/show_images_btn" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TimeDate 时间日期"
        android:id="@+id/time_date_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Widget Avila"
        android:id="@+id/widget"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DrawerLayout 抽屉式布局"
        android:id="@+id/drawer_layout"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView 集合"
        android:id="@+id/list_view"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ShowFragment 显示Fragment"
        android:id="@+id/show_fragment"/>


</LinearLayout>

</ScrollView>
