<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vector.uiforlife" >


    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".application.MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.PinnedHeaderActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.NetworkActivity" />
        <activity android:name=".activity.CameraActivity" />
        <activity android:name=".activity.ShowImagesActivity" />
        <activity android:name=".activity.TimeDateActivity" />
        <activity android:name=".activity.WidgetActivity" />
        <activity android:name=".activity.DrawerLayoutActivity" />
        <activity android:name=".activity.ListViewActivity" />
        <activity android:name=".activity.ShowFragmentActivity" />
    </application>

</manifest>
